generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  content     String?
  assigneeId  Int
  assignee    Assignee @relation(fields: [assigneeId], references: [id])
  status      String   @default("NOT_DONE")
  createdAt   DateTime @default(now())
}

model Assignee {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
}
